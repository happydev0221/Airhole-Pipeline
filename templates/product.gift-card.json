{
  "sections": {
    "main": {
      "type": "product",
      "blocks": {
        "title": {
          "type": "title",
          "settings": {
            "product_show_vendor": false,
            "show_rating": true,
            "show_rating_count": true
          }
        },
        "form": {
          "type": "form",
          "settings": {
            "variant_form": "button",
            "show_quantity": true,
            "show_remaining": true,
            "enable_payment_button": true,
            "subscriptions_enable_selectors": true,
            "info_page": ""
          }
        }
      },
      "block_order": [
        "title",
        "form"
      ],
      "settings": {
        "image_width": "half",
        "align": "left",
        "product_breadcrumbs": true,
        "enable_video_looping": true,
        "zoom_enable": false
      }
    },
    "reviews": {
      "type": "reviews",
      "disabled": true,
      "settings": {
        "product_reviews_enable": false,
        "bg": "section bg--accent"
      }
    },
    "related": {
      "type": "related",
      "settings": {
        "heading": "You might also like",
        "bg": "section bg--neutral",
        "related_products_enable": true,
        "limit": 6,
        "product_recommendations_heading": "Related products",
        "show_recently_viewed": true,
        "product_recently_limit": 6,
        "product_recently_minimum": 4,
        "product_recently_heading": "Recently viewed"
      }
    }
  },
  "order": [
    "main",
    "reviews",
    "related"
  ]
}